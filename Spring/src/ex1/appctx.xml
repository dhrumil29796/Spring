<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<bean id="str" class="java.lang.String">
		<!-- String(object) can be declared as a different bean -->
		<constructor-arg value="Viral"></constructor-arg>
	</bean>
	<bean id="hi" class="ex1.HelloWorld">
		<!-- Constructor injection of reference -->
		<constructor-arg ref="str"></constructor-arg>
		<!-- Setter injection value -->
		<property name="name" ref="str"></property>
	</bean>

	<!-- <bean id="hi" class="ex1.HelloWorld"> Constructor injection value <constructor-arg 
		value="Viral"></constructor-arg> Setter injection value <property name="name" 
		value="Dhrumil"></property> </bean> -->
</beans>
